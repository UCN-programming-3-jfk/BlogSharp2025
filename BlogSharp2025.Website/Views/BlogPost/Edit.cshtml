@model BlogSharp2025.DataAccessLibrary.Model.BlogPost

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit BlogPost</h4>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
