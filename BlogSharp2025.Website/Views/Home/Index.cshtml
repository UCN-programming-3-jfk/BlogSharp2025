
@model IEnumerable<BlogSharp2025.DataAccessLibrary.Model.BlogPost>

@{
    ViewData["Title"] = "Index";
}

<h1>Ten latest interesting blogposts</h1>

<table class="table table-striped">
    <thead>
        <tr>
           
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.CreationDate)</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.ActionLink(item.Title, 
                    "Details",
                    "BlogPost",
                    new { id=item.Id })</td>
            <td>@Html.DisplayFor(modelItem => item.CreationDate)</td>

            <td>
                @Html.ActionLink("Edit",
                                "Edit",
                                "BlogPost",
                                new { id = item.Id })
            </td>
            <td>
                <a href ="/blogpost/delete/@item.Id" onclick="javascript:return confirm('Delete? Really?')">Delete</a>
               @*  @Html.ActionLink("Delete",
                                "Delete",
                                "BlogPost",
                                new { id = item.Id }, ) *@
            </td>
        </tr>
}
    </tbody>
</table>
